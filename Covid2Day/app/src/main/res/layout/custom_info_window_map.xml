<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

  <TextView
      android:id="@+id/textViewCountryTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/roboto_bold"
      android:text="TextView"
      android:textAlignment="center"
      android:textColor="@color/colorAccent"
      android:textSize="@dimen/textfields_main" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="24dp"
      android:orientation="horizontal">

    <TextView
        style="@style/sheet_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/cases"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/infow_window_left" />

    <TextView
        android:id="@+id/textViewCases"
        style="@style/sheet_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="@dimen/infow_window_right" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      android:orientation="horizontal">

    <TextView
        style="@style/sheet_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/deaths"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/infow_window_left" />

    <TextView
        android:id="@+id/textViewDeaths"
        style="@style/sheet_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textSize="@dimen/infow_window_right" />
  </LinearLayout>
</LinearLayout>